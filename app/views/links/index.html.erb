  <br>
</div>

    <span class="url"> 
     <%= f.text_field  :lenght,  placeholder: "url length(optional)" %><br/>
   </span>
    
    

       <%=  f.submit "Request a new url" , class: "btn btn-danger btn-lg" %>
       
           
  
 <% end %>


</div>
     